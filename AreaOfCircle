import java.util.*;
class AreaOfCircle {
    public static void main(String[] args) {
         Scanner sc = new Scanner(System.in);

      
        System.out.println("Enter radius: ");
        double r = sc.nextDouble();
        double area = 3.14 * r * r;
        System.out.printf("Area of the circle is %f",area );   
    }
}
