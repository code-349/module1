import java.util.*;
class AreaOfCircle {
    public static void main(String[] args) {
         Scanner sc = new Scanner(System.in);

      
        System.out.println("Enter radius: ");
        float r = sc.nextFloat();
        float pi=3.14f;
        float area = pi * r * r;
        System.out.println("Area of the circle is %f"+area );   
    }
}
